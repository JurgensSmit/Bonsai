<%= simple_form_for [@user, @post] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :tag %>
    <%= f.input :content %>
    <%= f.input :category, :label => "Categories", :collection => [ 'Random', 'Religious', 'Family', 'Love'], :default => "Random" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
