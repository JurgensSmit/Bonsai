<h1> <%= @post.title %> </h1>

<%= @post.content %>

<%= image_tag(@post.image, :class => :thumb) if @post.image? %>

<h2> Comments </h2>

<% @post.comments.each do |comment| %>
<p> <%= comment.content%> </p>
<p> <%= time_ago_in_words comment.created_at %> ago </p>
<p> <%= link_to "Delete Comment", [@post, comment], :method => :delete , :confirm => "Are you sure?" %> </p>
<% end %>

<%= form_for [@post, @post.comments.build] do |f| %>
<p><%= f.text_area :content, :size => '40x10' %> </p>
<p> <%= f.submit "Post comment " %> </p>
<% end %>

<p>
<%= link_to "Back", user_posts_path %>

<%= link_to "Edit", edit_user_post_path(@post) %>

<%= link_to "Delete", @post, :method => :delete, :confirm => "Are you sure?" %>
</p>