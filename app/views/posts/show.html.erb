<div class="container" >
<div class="well postbox" style="margin-top:20px;margin-right:20px; ;overflow:scroll; max-width: 920px"><h1> <%= @post.title %> </h1>

<%= @post.content %>

<%= image_tag(@post.image, :class => :thumb) if @post.image? %>





<p>
<%= link_to "Back", posts_path %>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", @post, :method => :delete, :confirm => "Are you sure?" %>
</p>
</div>
</div>