

<br>
 <div style="margin-right:60px;">

<div class="row-fluid postrow">

<% @posts.each_with_index do |post,index| %>

<% if index%3 != 0 %>
        <div class="span4 postbox" >
            <div class= "postext">
                <h3 class ="posthead"> <%= post.title %></h3>
               
                <% if post.tag? %>
                <h5># <%= post.tag %></h5><br>
                <%end %>

        
                <h5> <%= post.content %></h5>
            </div>
                 <h4 ><small> By:
                  <%=link_to post.user.name.capitalize, user_path(post.user) %>   <%= time_ago_in_words(post.created_at) %> ago
                </small></h4>


             <%= %><i class="icon-heart heart pull-right " style="margin-right:10px;"></i>
        
          <%= link_to 'Edit', edit_post_path(post), :class => 'editlike pull-left'%>

       
      </div>
<% else %>

</div>
